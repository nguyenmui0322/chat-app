extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)
    
    if(user.fullName)
      p Họ tên: <b>#{user.fullName}</b>

    if(user.email)
      p Email: <b>#{user.email}</b>

    p   
      span Trạng thái: 
      span
        <b>#{user.status === "active" ? "Hoạt động" : "Dừng hoạt động"}</b>