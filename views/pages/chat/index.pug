extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3 
    .row 
      .col-12 
        +box-head(pageTitle)


    .row 
      .col-12 
        .chat(my-id=user.id)
          //- .inner-head
          //-   .inner-avatar EY
          //-   .inner-name Em Yêu
          .inner-body
            each chat in chats
              div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                if(chat.user_id != user.id)
                  .inner-name #{chat.infoUser.fullName}
                if(chat.content)
                  .inner-content
                    | #{chat.content}
            //- .inner-outgoing
            //-   .inner-content
            //-     | Thế à? Ok em iu
            //- .inner-incoming
            //-   .inner-name Em Yêu
            //-   .inner-content
            //-     | Nhanh nha nhanh nha
            //- .inner-outgoing
            //-   .inner-content
            //-     | Anh đến rồi mà có thấy ai đâu em? Khóa cửa mà 
            //- .inner-incoming
            //-   .inner-name Em Yêu
            //-   .inner-content
            //-     | Thì em bảo là không có ai ở nhà mà
          .inner-foot
            form(
              class="inner-form"
              action=""
            )
              input(
                type="text"
                placeholder="Nhập nội dung..."
                name="content"
              )
              span(class="button-icon btn btn-light mx-2") <i class="fa-regular fa-face-smile"></i>
              button
                i.fa-solid.fa-paper-plane

  div(class="tooltip" role="tooltip")
    emoji-picker(class="light")